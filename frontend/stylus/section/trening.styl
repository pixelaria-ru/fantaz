.trening
  padding 80px 0 100px
  h1
    color #444444
    font-size 48px
    font-weight 400
    text-align center
    line-height 58px
  .pipos
    color #444444
    font-size 36px
    font-weight 400
    line-height 48px
    text-align center
  .trening__list
    margin-top 80px
    justify-content center
  .trening__item
    margin-right 30px
    &:last-child
      margin-right 0
    img
      width 70px
      height 70px
      margin-right 20px
      box-shadow inset 0 0 8px rgba(0, 0, 0, 0.2)
      background-color #69d1ea
      border-radius 50%
    p
      color #444444
      font-size 18px
      font-weight 400
      line-height 32px
      width calc(100% - 90px)
      max-width 280px
