.section--education-formats
  height 282px
  border 1px solid #979797
  background-image linear-gradient(124deg, #54a3b6 0%, #66cce4 100%)
  .container
    justify-content space-between
    align-items center
    height 100%
  h2
    text-align left
    color #fff
    margin-bottom 17px
  p
    color #ffffff
    font-size 16px
    font-weight 400
  .right-side
    flex-wrap wrap
    max-width 600px
    margin-top 35px


.education-form
  align-items center
  margin-bottom 35px
  margin-right 35px
  cursor pointer
  transition .33s
  &:hover
    transform scale(1.05)
  &__img
    width 40px
    height 40px
    box-shadow inset 0 0 4px rgba(0, 0, 0, 0.2)
    background-color #ffffff
    border-radius 50%
    align-items center
    justify-content center
    img
      max-width 20px
      max-height 20px
  h3
    color #ffffff
    max-width 105px
    margin-left 15px
    font-size 16px
    font-weight 400
