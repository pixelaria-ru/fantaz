.section--initial
  position relative
  height 570px
  &:after
    content ''
    position absolute
    width 110px
    height 110px
    right 0
    top 185px
    transform skewY(-36deg)
    background-color #56b3ca
  .container
    position relative
    height 100%
    &:before
      content ''
      position absolute
      left calc(440px + 85px)
      bottom 0
      border calc(385px / 2) solid transparent
      border-top-color #fff
      border-left-color #fff
    &:after
      content ''
      border 125px solid transparent
      border-bottom-color #ffffff
      border-right-color #ffffff
      position absolute
      bottom 0
      right 185px
  img
    position absolute
  h1
    color #444444
    font-size 48px
    font-weight 400
    line-height 58px
    margin-bottom 10px
  p
    color #444444
    font-size 36px
    font-weight 400
    line-height 48px
  ul
    margin-top 20px
    margin-bottom 28px
    li
      display flex
      align-items center
      &:before
        content ''
        background #488999
        height 1px
        display block
        width 11px
        margin-right 11px
      span
        color #444444
        font-size 18px
        font-weight 400
        line-height 32px
  a
    color #ea6969
    font-size 18px
    font-weight 400
    position relative
    display flex
    align-items center
    &:before
      content url(../images/initial-link.png)
      width 40px
      height 45px
      display block
      margin-right 15px
      margin-top 15px
    &:after
      content ''
      width 130px
      position absolute
      left calc(40px + 15px)
      bottom 10px
      height 1px
      background-color #ea6969


.initial-info
  position relative
  background #ffffff
  margin-left -85px
  width 610px
  height 485px
  padding 90px 0 0 85px
  &:before
    content ''
    position absolute
    left 0
    bottom -85px
    z-index 1
    border 45px solid transparent
    border-bottom-color #69d1ea
    border-right-color #69d1ea
  &:after
    content ''
    position absolute
    width 525px
    left 0
    height 85px
    bottom -85px
    background #ffffff
