.section--education-results
  position relative
  height 600px
  justify-content flex-end
  align-items center
  padding 0
  &:after
    content ''
    border 70px solid transparent
    border-top-color #ffffff
    border-left-color #ffffff
    position absolute
    top 0
    left 0
  .info
    width 595px
    height 500px
    background-image linear-gradient(119deg, #68d0e9 0%, #56b3ca 100%)
    position relative
    padding 50px
    &:after
      content ''
      border 70px solid transparent
      border-bottom-color #ffffff
      border-right-color #ffffff
      position absolute
      bottom 0
      right 0
    h2
      text-align left
      color #fff
      margin-bottom 25px
    .result-item
      align-items center
      margin-bottom 20px
      &:last-child
        margin-bottom 0
      &__img
        width 60px
        height 60px
        border-radius 50%
        border 1px solid #ffffff
        align-items center
        justify-content center
        img
          max-height 30px
          max-width 30px
      p
        margin-left 25px
        width calc(100% - 60px - 25px)
        color #ffffff
        font-size 16px
        font-weight 400
        line-height 28px
        strong
          font-weight 700

.section__img
    position absolute
    left 0
    max-width 960px
