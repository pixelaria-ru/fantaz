.header
  position absolute
  top 0
  width 100%
  &__up-line
    width 100%
    background #fff
    .container
      height 110px
      align-items center
      justify-content space-between
    &.fixed
      position fixed
      z-index 9999
      top 0
  &__nav
    max-height 50px
    padding calc((50px - 16px) / 2 ) 0
    background-color var(--darkBlue)




.link
  margin-left 25px
  &--mail
    color #505050
    font-size 18px
    font-weight 400
    text-decoration underline
  &--tel
    color #505050
    font-size 18px
    font-weight 400
    span
      color #488999
  &--button
    max-width 138px
    max-height 50px
    color #488999
    font-size 16px
    font-weight 400
    border-radius 30px
    border 1px solid #488999
    padding 15px 30px
    transition .33s
    &:hover
      background #488999
      color #fff

.logotype
  align-items center
  img
    max-width 50px
    max-height 50px
  span
    margin-left 17px
    color #333333
    font-size 18px
.header-list
  &__item
    margin-right 30px
    a
      color #ffffff
      font-size 16px
      &:hover
        &:after
          width 100%
      &:after
        content ''
        display block
        height 1px
        background #fff
        margin-top 2px
        transition .55s
        width 0%
