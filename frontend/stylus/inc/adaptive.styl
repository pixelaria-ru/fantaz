@media(min-width 320px) and (max-width 767px)
  .page
    .individual-education
      margin-bottom 80px
      h2
        color #ffffff
        font-size 36px
        font-weight 400
        line-height 48px
      &:before
        height 1590px
      .individual-blocks
        flex-wrap wrap
        flex-direction column
        align-items center
      .individual-block
        border 0
        &.white-block
          background 0
          box-shadow none
          h3
            color #fff

          .individual-block__item
            p
              color #fff
            &:first-child
              .item__img
                background 0
            &:nth-child(2)
              .item__img
                background 0
            &:nth-child(3)
              .item__img
                background 0
        &:after
          left 0
          right 0
          bottom -40px
          top auto
    .education-blocks
      padding 80px 20px

      .edu-blocks
        .edu-block
          max-width 280px
          margin-right 0
          &__header
            width 280px
    .initial-acreen
      &__info
        padding 40px 20px 0
        p
          color #444444
          font-size 24px
          text-align left
          font-weight 400
          line-height 36px
      .format-edu__img
        display none
      .format-edu__info
        margin-left 20px

      h1
        color #444444
        font-size 36px
        text-align left
        font-weight 400
        line-height 48px
  .section--timetable,.section--opinions
    display none
  .container
    padding 0 10px
  .header
    overflow hidden
  .header__nav
    width max-content
    background #5b5b5b;
  .section--initial
    height max-content
    .container
      padding 0
    .initial-info
      width 100%
      margin-left 0
      padding 60px 15px 60px 20px
      margin-bottom 85px
      height max-content
      a
        &:after
          bottom -8px
          left 0
        &:before
          display none
    h1
      font-size 36px
      line-height 36px
    p
      font-size 24px
      font-weight 400
      line-height 32px

  .link--tel
