@media(min-width 768px) and (max-width 1280px)
  .page
    .initial-acreen
      &__info
        padding-top 100px
      &__formats
        flex-wrap wrap
        margin-top 35px
        justify-content center
        .format-edu
          &:first-child
            margin-right 0
            margin-bottom 30px
    .education-blocks
      padding 80px 40px
      .edu-blocks
        flex-wrap wrap
        justify-content flex-start
        align-items flex-start
        .edu-block
          margin-bottom 30px
    .individual-education
      margin-bottom 80px
      &:before
        height 1482px
      .individual-blocks
        flex-wrap wrap
        flex-direction column
        align-items center
      .individual-block
        margin-right 0
        margin-bottom 55px
        &:after
          left 0
          right 0
          bottom -40px
          top auto
    .section--opinions
      padding 80px 40px
    .section--timetable
      padding 80px 20px
      .non
        display block
      .vis
        display none
      .timetable-item
        h3
          max-width 300px



  .logotype
    span
      display none
  .section--education-programs
    padding 80px 20px
    .for-whom
      height 290px
      padding 40px
      .button
        margin-right 5px
        padding 17px 20px
      h6
        padding-right 30px
        margin-right 30px
        min-width calc(78px + 30px)
  .section--initial
    overflow hidden
    &:after,&:before
      display none
    .container
      &:after
        left 440px
      &:before
        left 480px
  .article-edu-program
    h3
      width 420px
      height 30px
      overflow hidden

    .article-program__info
      .button
        min-width 130px
        right 10px
        span
          display none
  .section--education-formats
    padding 60px
    height max-content
    h2
      text-align center
    .container
      flex-direction column
      padding 0
    .right-side
      justify-content center
  .section--education-results
    padding 0
  .section--about
    padding 60px 20px 0
    .right-side
      margin-left 30px
    .about-tab
      align-items flex-start
      img
        max-width 200px
        max-height 270px
  .section--news
    article
      &:nth-child(even)
        display none
  .section--completed-projects
    padding 40px 20px 140px
    .complete-project
      margin 18px
    h2
      padding-right 25px
      margin-right 15px

  .section--our-clients
    display none
