@media(min-width 768px) and (max-width 1280px)


  .logotype
    span
      display none


  .section--education-programs
    padding 80px 20px
    .for-whom
      height 290px
      padding 40px
      .button
        margin-right 5px
      h6
        padding-right 30px
        margin-right 30px
        min-width calc(78px + 30px)

  .article-edu-program
    h3
      width 420px
      height 30px
      overflow hidden

    .article-program__info
      .button
        min-width 130px
        right 10px
        span
          display none
  .section--education-formats
    padding 60px
    height max-content
    h2
      text-align center
    .container
      flex-direction column
      padding 0
    .right-side
      justify-content center
  .section--education-results
    padding 0
  .section--about
    padding 60px 20px 0
    .right-side
      margin-left 30px
    .about-tab
      align-items flex-start
      img
        max-width 200px
        max-height 270px
  .section--news
    article
      &:nth-child(even)
        display none
  .section--completed-projects
    padding 40px 20px 140px
    .complete-project
      margin 18px
    h2
      padding-right 25px
      margin-right 15px

  .section--our-clients
    display none
@media(max-width 768px)
  .container
    padding 0 40px
  .link--mail
    display none
  .section--initial
    overflow hidden
    &:after,&:before
      display none
    .container
      &:after
        left 440px
      &:before
        left 480px
  .section--education-formats
    padding 60px
    height max-content
    h2
      text-align center
    .container
      flex-direction column
      padding 0
    .right-side
      justify-content center
  .section--news
    article
      &:nth-child(even)
        display none

@media(min-width 320px) and (max-width 767px)
  .container
    padding 0 10px
  .header
    overflow hidden
  .header__nav
    width max-content
    background #5b5b5b;
  .section--initial
    height max-content
    .container
      padding 0
    .initial-info
      width 100%
      margin-left 0
      padding 60px 15px 60px 20px
      margin-bottom 85px
      height max-content
      a
        &:after
          bottom -8px
          left 0
        &:before
          display none
    h1
      font-size 36px
      line-height 36px
    p
      font-size 24px
      font-weight 400
      line-height 32px

  .link--tel
    display none
  .logotype
    h6
      display none
  .section--education-formats
    padding 40px 20px
    .right-side
      justify-content flex-start
      .education-form
        margin-right 0
      h3
        font-size 16px
        font-weight 400
        max-width 100%
    h2
      font-size 24px
      font-weight 400
      line-height 48px
    p
      text-align center
  .section--news
    padding 20px
    .article-news
      margin-right 0
      img
        display none
      .info
        margin-left 0
  .section--education-results
    padding 0
    height max-content
    &:after
      display none
    .info
      width 100%
      height max-content
      padding 40px 20px
      h2
        font-size 24px
        font-weight 400
        line-height 48px
        text-align center
      .result-item
        p
          width 100%
          margin-left 0

      .result-item__img
        display none
      &:after
        display none
    .section__img
      display none
  .section--our-clients
    overflow hidden
  .section--about
    padding 50px 20px
    h2
      font-size 24px
      font-weight 400
      line-height 48px
      margin-bottom 33px
    .right-side
      margin-left 0

    .select-tabs
      display none
    .about-tab
      flex-direction column
      img
        margin-bottom 40px
  .section--education-programs
      padding 40px 10px
      .for-whom
        display none
      h2
        font-size 24px
        font-weight 400
        line-height 48px
        margin-bottom 35px
      .article-edu-program
        height 40px
        margin-bottom 10px
        img
          width 40px
          height 40px
        h3
          font-size 16px
          font-weight 400
          margin-left 10px
        button
          display none
  .section--completed-projects
    display none
