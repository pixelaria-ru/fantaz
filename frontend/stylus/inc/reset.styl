*
  margin 0
  padding 0
  font-size 100%
  line-height 100%
  box-sizing border-box
button
  cursor pointer
  border 0
ul
  list-style none
a
  text-decoration none
body
  font-family "Circe", sans-serif

::selection
  background var(--pink)
  color #fff
img
  width 100%
  height 100%
  object-fit cover

input
  border 0

input[type='submit']
  + label
    cursor pointer
